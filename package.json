{
  "name": "bike-worcester-branding",
  "version": "1.2.0",
  "description": "A collection of brand guidelines and resources for Bike Worcester and its associated projects.",
  "scripts": {
    "plop": "pnpm dlx plop --plopfile ./plopfile.js",
    "docs": "pnpm run plop -- docs",
    "generate": "node -r dotenv/config ./scripts/build.mjs",
    "build": "pnpm run docs && pnpm run generate",
    "serve": "pnpm dlx markserv .",
    "commit-version-change": "git add package.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bike-Worcester/bike-worcester-branding.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Bike-Worcester/bike-worcester-branding/issues"
  },
  "homepage": "https://github.com/Bike-Worcester/bike-worcester-branding#readme",
  "dependencies": {
    "dotenv": "^16.4.5",
    "svgo": "^3.2.0"
  },
  "devDependencies": {
    "colors": "^1.4.0",
    "prettier": "^3.2.5"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
